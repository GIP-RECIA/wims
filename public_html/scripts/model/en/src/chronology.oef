\text{shu=wims(sort numeric item \shu)}
\text{data=row([\shu],\data)}
\text{data=\accolade=1 ? wims(embraced randitem \data)}
\matrix{rep=\data}
\integer{size=(1.5*\facteur)*(\M+1)}
\integer{height2=4*\height}
\text{size=\size,\height2}
