Lang_name_tw=Chinese big5
Lang_name_cn=Chinese gb
Lang_name_si=Slovensko

wims_language_cnt=!wordcnt $wims_site_languages
!for l in nl,en,fr,de,it,ca,es,cn,tw,si,ar
  lang_name_$l=$ $(Lang_name_$l)
!next l
