!set phtmldir=authors/jm.evers/phtml
!set jsdir=scripts/authors/jm.evers/js
!set gifdir=scripts/authors/jm.evers/gifs

!set max_s=40
!header
!form new
!set s=0

!for p=1 to 100
    !set competence=!record $[-1*$p] of lang/remarks.$taal
    !if $competence=$empty
	!goto READY
    !else    
	!increase s
	!set sum=!append word <li>$competence</li> to $sum
	!set selecttext=!append line <option value="$s">$competence</option> to $selecttext
    !endif
!next p
:READY
    <input type="hidden" name="module" value="$module" />
    <hr style="width:50%" />
	<p style="text-align:center">
	    <span style="color:red">
		<em>
		    <a onmouseover="return escape('$module_title<br /> est un module néerlandais produit par <em>SCHAERSVOORDE AALTEN</em></b><br /><img src=\'$gifdir/schaersvoorde.jpg\' alt=\'schaersvoorde\' />')">
			Configuration
		    </a>
		</em>
	    </span>
	</p>
    <hr style="width:50%" />
    <div style="vertical-align:top;margin-left:20%;margin-right:auto;width:100%;background-color:#fffff0;">
	<table>
	    <tr>
	    <td>
		<p style="text-align:left">
		!if $translated=0
		    !! mylaguages are defined in the actual module (intro.phtml)
		     <a onmouseover="return escape('Sorry<br />No support for $lang')">
			<small>
			    <em>
				<span style="color:red">
				Désolé,<br />
				mais les langages disponibles de ce module sont: <b>$talen</b><br />
				Actuellement, il n'y a pas de version pour <b>$lang</b><br />
				Le module est à l'origine en néerlandais et sera par défaut en anglais.
				</span>
			    </em>
			</small>
		    </a>
		    !set taal=en
		!endif
		<p style="text-align:left">
		      <a onmouseover="return escape('<ol>$sum</ol><br />Ce module a $s sujets différents<br />En général, chaque sujet a 4 niveaux.')">
	    		Quel <span style="color:blue">sujet</span> ?:
		    </a>
		    <select name="subject">
			!for p=1 to $s
			    !line $p of $selecttext
			!next p
		    </select>
		</p>
		<p style="text-align:left">
		     <a onmouseover="return escape('Chaque sujet peut avoir 4 niveaux de difficultés <br />et le niveau par défaut est <em>progressif</em>')">
			Régler le <span style="color:blue">niveau</span> de difficulté de cet exercice:
		    </a>
		    <select name="level">
	    		<option value="0">progressif</option>
			<option value="1">facile</option>
	    		<option value="2">normal</option>
	    		<option value="3">difficile</option>
	    		<option value="4">très difficile</option>
		    </select>
		</p>
		<p style="text-align:left">
		     <a onmouseover="return escape('Tous les exercices ont un maximum de 10 questions à la fois pour un score.')">
			Régler le <span style="color:blue">nombre</span> d'exercices:
		    </a>
		    <input size="10" name="total_exos" value="3" />
		</p>
		<p style="text-align:left">
		     <a onmouseover="return escape('Quelle précision veut-on pour les réponses numériques ?<br /><em>Précision mathématique</em> signifie <em>1.4142</em> est pénalisé si <em>&radic;2</em> est demandé</em><br />Le défaut est <em>non pertinent</em> ce qui signifie que c\'est à l\'exercice de décider ...<br /> Note: le module peut toujours changer vos choix si nécessaire.')">
			<span style="color:blue">Précision</span> de la réponse&nbsp;?
		    </a>
		    <select name="rounding">
			<option value="-1">non pertinent</option>
			<option value="0">précision mathématique</option>
	    		<option value="100000">5 décimales</option>
	    	    	<option value="10000">4 décimales</option>
			<option value="1000">3 décimales</option>
	    		<option value="100">2 décimales</option>
	    		<option value="10">1 décimale</option>
	    		<option value="1">entiers</option>
		    </select>
		</p>
		!if $usage=$empty
		<p style="text-align:left">
		     <a onmouseover="return escape('Il peut y avoir quelques <em>paramètres configurés par défaut </em><ul><li>Examen formel  signifie une vérification très stricte de la réponse et <em>uniquement le score</em> à la fin, sans accès à la réponse juste<li>Examen test  a une vérification moins rigide mais il n\'y a toujours que le score à la fin du test<li>Entraînement donne toutes les aides disponibles et la réponse correcte complète,  avec des informations supplémentaires éventuellement<li>Paramétrages particuliers vous propose un <em>nouveau menu</em>  avec accès à <em>tous</em> les réglages possibles<br /> comme Mathpreview, taille des fonts, images, aide, calculatrices, limites de temps <br /> et vous permet de créer un ensemble de liens HTML vers cette version spécifique de cet exercice.<li>Version imprimable propose un nouveau menu<br /> où vous pourrez créer l\'exercice pour un test sur papier <br /><em>Cela n\'est possible que si l\'exercice est intéressant sur papier : les applets et d\'autres questions sont exclues.</em> <br />Vous pouvez aussi <em>redimensionner les images</em>  et même réarranger les éléments de l\'exercice  pour que la disposition soit meilleure sur papier (utilise un cross browser DHTML)<br />Il y a une limite <em>codée en dur</em> au nombre de questions en une fois</ul> ')">
			<span style="color:blue">Utilisations</span> de cet exercice:
		    </a>
		    <select name="usage">
			<option value="2">Entraînement</option>
			<option value="4">Paramétrages particuliers</option>
			<option value="3">Version imprimable</option>
			<option value="1">Examen test</option>
	    		<option value="0">Examen formel</option>
			<option value="6">tous les liens html pour ce module</option>
		    </select>
		</p>
		!endif
		<input type="hidden" name="taal" value="$taal" />
		<p style="text-align:center">
		    <input style="background-color:#afceff;color:black;font-weight:normal;font-size:16px;text-align:center;" type="submit"  value="La CONFIGURATION est OK" />
		</p>
	    </td>
	    !if $usage=3 or $usage=4
	    <input type="hidden" name="usage" value="5" />
	    </tr><tr>
	    <td>
	    <hr style="width:50%" />
		!if devel isin $module_dir
		<p style="text-align:left">
		    De style libre ,Choix multiple ,Drag&Drop? 
		      <a onmouseover="return escape('Cette variable peut être paramétrée différemment <br />ou individuellement pour un fichier d\'exercices.<br />Tous les exercices de style libre ne peuvent pas être mis en choix multiple en choissisant ce $$questiontype here<br /><br />Un module utilisant  GeoGebra pour un $$subject  sera<br />indépendant des paramétrages que vous donnerez ici...')">
			<span style="color:blue">ou GeoGebra</span>
		    </a>
		    <select name="questiontype">
			<option value="0">Réponses de style libre</option>
		    	<option value="1">Choix multiples</option>
		    	<option value="2">Glisser et déposer</option>
		    	<option value="3">Hotspot</option>
			<option value="0"></option>
			<option value="0"></option>
			<option value="0"></option>
		    	<option value="4">GeoGebra</option>
		    	<option value="5">GeoGebra+image</option>
		    	<option value="6">Roll your own
			(quelques informations sur son utilisation sont incluses)
			</option>
		    </select>
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Si vous utilisez ce modèle pour le développement d\'un module jm.evers e<br />voudriez vous quelques informations sur les variables <br />utilisées dans ce module<br />TCette information sera accessible dans les pages d\'aides.')">
			<span style="color:blue">Déboggage en développement</span> information dans les pages d'aide.
		    </a>
		    <select name="debug">
			<option value="0">non</option>
			<option value="1">oui</option>
		    </select>
		</p>
		!endif
		<p style="text-align:left">
		      <a onmouseover="return escape('C\'est un nombre codé en dur de 100.<br />Si le nombre de retours d\'un exercice dûs à des erreurs de syntaxe dépasse cette valeur, le score sera de <b>1</b>.')">
			Donner le nombre de <span style="color:blue">retours maximum </span> pour des erreurs de syntaxe:
		    </a>
		    <input size="5" name="maxtry" value="5" />
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Si oui, il y aura plus d\'aide à l\'élève <br />De petites errors seront renvoyés pour corrections.<br /> Quelques pages d\'aide spéciale<em>peuvent</em> être proposées.<br />Si cela est possible et utile, il y aura toujours un graphe ou une illustration de disponible.<br />La valeur par défaut est <em>oui</em>.')">
			Quelques <span style="color:blue">aides pour s'entraîner</span>
		    </a>
		    <select name="teaching">
			<option value="1">oui</option>
			<option value="0">non</option>
		    </select>
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Si l\'exercice contient une image ou un graphe de fonction et si ce n\'est pas essentiel à l\'exercice,voulez-vous le montrer ?<br />Le défaut est <b>oui</b>.')">
			Si disponible, montrer un <span style="color:blue">exemple</span> ?
		    </a>
		    <select name="image">
	    		<option value="1">oui</option>
			<option value="0">non</option>
		    </select>
		</p>
		!if $usage=3
		    <input type="hidden" name="printexo" value="1" />
		!endif
		!if $usage=4
		<p style="text-align:left">
		      <a onmouseover="return escape('cette variable peut ne pas être prise en compte par l\'exercice, et il y a un maximum codé en dur...')">
			En cas de choix multiples, Drag&Drop ou  items  multiples, combien <span style="color:blue">d'items</span>
		    </a>
		    <input size="5" name="options" value="4" />
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Si <b>oui</b>, un signe OK sera montré à l\'élève si la réponse à une partie de la question est correcte <img src=\'$gifdir/ok.gif\' alt=\'ok\' /> <img src=\'$gifdir/bok.gif\' alt=\'bok\' /> <img src=\'$gifdir/nok.gif\' alt=\'nok\' /><br />Ou même une remarque au hasard, quelquefois drôle ... ')">
			Un signe <span style="color:blue">bon (OK) ou mauvais (NOK)</span> entre les questions des exercices?
		    </a>
		    <select name="goodbadsign">
			<option value="2">Oui et une remarque</option>
			<option value="1">oui</option>
			<option value="0">non</option>
		    </select>
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Voulez-vous que la <em>réponse correcte</em> soit montrée à la fin du test ?<br />Le défaut est <em>oui</em>.')">
			Montrer la réponse correcte <span style="color:blue">à la fin</span> de l'exercice ?
		    </a>
		    <select name="showanswer">
	    		<option value="1">oui</option>
			<option value="0">non</option>
		    </select>
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Voulez-vous utiliser une calculatrice en javascript ?<br /><img src=\'$gifdir/basic.jpg\' alt=\'basic\' /><img src=\'$gifdir/science.jpg\' alt=\'science\' />')">
			Une <span style="color:blue"> calculatrice</span> popup en javascript
		    </a>
		    <select name="calculator">
			<option value="1">modèle très basique</option>
			<option value="2">modèle "scientifique" </option>
			<option value="3">applet en ligne de commande</option>
			<option value="0">pas de calculatrices</option>
		    </select>
		</p>
		<p style="text-align:left">
		     <a onmouseover="return escape('Voulez-vous proposer une page de brouillon, par exemple une zone d\'écriture pour les calculs ? ')">
			 <span style="color:blue">brouillon </span> popup
		    </a>
		    <select name="scribbling">
			<option value="1">Oui</option>
			<option value="0">Non</option>
		    </select>
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Montre une petite horloge.')">
			Une <span style="color:blue">horloge JS simple?</span>
		    </a>
		    <select name="time">
			<option value="1">oui</option>
			<option value="0">pas d'horloge</option>
		    </select>
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('La limite de temps n\'est pas encore implémentée.')">
			<span style="color:blue">Limite de temps</span> par exercice
		    </a>
		    <input size="15" name="duration" value="non implémentée" /> minutes
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('<img src=\'$gifdir/math.jpg\' alt=\'math\' /><br />Il y a <b>deux</b> options<ol><li>utiliser une Applet Java</li><li>utiliser la fonction de  WIMS donnant une image gif de la formule</li></ol>Les deux options envoient la réponse directement au serveur WIMS.<br />Sur des serveurs lents ou très occupés, l\'applet est préférable.')">
			Un champ pour entrer  les <span style="color:blue">formules de mathématiques </span> ?
		    </a>
		    <select name="mathview">
			<option value="4">Option : Applet HTML5 </option>
			<option value="5">Oui, utiliser l'applet HTML5</option>
			<option value="0">Non, utiliser une zone de texte normal</option>
			<option value="3">Oui, utiliser l'applet JAVA</option>
			<option value="2">Option : Applet JAVA </option>
			<option value="1">Option : WIMS Math</option>
		    </select>
		</p>
		<p style="text-align:left">
		      <a onmouseover="return escape('Ici vous pouvez contrôler la taille des insertions mathématiques.<br />Le module peut toujours outrepasser cette valeur <ul><li><img src=\'$gifdir/4.gif\' alt=\'4\' />+4</li><li><img src=\'$gifdir/3.gif\' alt=\'3\' />+3</li><li><img src=\'$gifdir/2.gif\' alt=\'2\' />+2</li><li><img src=\'$gifdir/1.gif\' alt=\'1\' />+1</li><li><img src=\'$gifdir/0.gif\' alt=\'0\' />0</li><li><img src=\'$gifdir/-1.gif\' alt=\'-1\' />-1</li><li><img src=\'$gifdir/-2.gif\' alt=\'-2\' />-2</li><li><img src=\'$gifdir/-3.gif\' alt=\'-3\' />-3</li><li><img src=\'$gifdir/-4.gif\' alt=\'-4\' />-4</li></ul>')">
			Ajuster la taille des  fontes <span style="color:blue">Math LaTeX </span> ?
		    </a>
		    <select name="mytexsize">
			<option value="0">laisser tel quel</option>
			<option value="+4">+4</option>
			<option value="+3">+3</option>
			<option value="+2">+2</option>
			<option value="+1">+1</option>
			<option value="-1">-1</option>
			<option value="-2">-2</option>
			<option value="-3">-3</option>
			<option value="-4">-4</option>
		    </select>
		</p>
	
		<p style="text-align:left">
		      <a onmouseover="return escape('Si <em>oui</em> l\'usage du <em>copier coller</em> de cette page sur la zone de réponse n\'est pas possible dans la zone de réponse.<br />Quelquefois utile, si vous voulez que les élèves écrivent eux-même leur propre réponse... ')">
			Empêcher la <span style="color:blue">sélection du texte à la souris</span> ?
		    </a>
		    <select name="noselect">
			<option value="1">oui</option>
			<option value="0">non</option>
		    </select>
		</p>

		<p style="text-align:left">
		     <a onmouseover="return escape('Si vous choisissez <em>oui</em> nous vous donnerons une série de liens vers cet exercice,<br />avec </b>tous</b> les paramètres spécifiques que vous avez décidés.<br />Faites alors un <em>copier-coller</em> pour mettre ces liens dans votre page web, ou votre plateforme d\'apprentissage')">
			Créer des <span style="color:blue">liens</span> spécifiques à cet exercice ?
		    </a>
		    <select name="printexo">
			<option value="0">non</option>
			<option value="2">oui</option>
		    </select>
		</p>
		!endif
	    </td>
	    !endif
	    !if $usage=6
                </tr><tr>
                <td>
                    <hr />
                    <hr />
                        !changeto lang/module.$taal.phtml
                    <hr />
                    <hr />
                </td>
            !endif
	</tr>
    </table>
    </div>
