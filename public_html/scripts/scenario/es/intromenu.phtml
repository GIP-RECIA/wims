
!read Exindex
!set exocnt=!itemcnt $exolist
!set qcnt=8
!if $qcnt>$exocnt
  !set qcnt=$exocnt
!endif
!if $exocnt<1
  Lo sentimos, este módulo no tiene ejercicios disponibles n este momento.
  ¡Vuelva más tarde!
  !exit
!endif
!if $exocnt=1
  Este módulo contiene ahora mismo sólo un ejercicio,<b>
  !item 1 of $titlelist
  </b>.
  !set exoo=!item 1 of $exolist
  !href cmd=new&module=$module&exo=$exoo Intentarlo.
  !exit
!endif
