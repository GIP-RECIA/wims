<table><tr>
<td style="text-align:center;">
<table class="cw_grille">
!for k = 1 to $ligne_cnt
  <tr>
  !for j = 1 to $col_cnt
    !if $(MotC[$k;$j]) = $empty
      <td class="cw_black"><div id="case_$(k)_$(j)"></div></td>
    !else
      <td class="cw_case">
      !set m=$(MotC[$k;$j])
      !reset u_
      !if $(Mpos[$k;$j])!=0
        !if tooltip iswordof $(replyoption$i)
          !set u = !select $defH where column 1 issametext H$(Mpos[$k;$j])
          !if $u!=$empty
            !set u_=$name_horizontal $(u[2..-1])
          !endif
          !set u = !select $defV where column 1 issametext V$(Mpos[$k;$j])
          !if $u!=$empty
            !set u_=$u_<p>\
            $name_vertical $(u[2..-1])</p>
          !endif
          <div id="number_$(k)_$(j)" class="cw_no" onclick="javascript:showdef($(Mpos[$k;$j]));">
          <div class="wims_tooltip">$(Mpos[$k;$j])
            <div class="wims_tooltiptext" style="width:200px">$u_</div>
          </div>
          </div>
        !else
          <span id="number_$(k)_$(j)" class="cw_no" onclick="javascript:showdef($(Mpos[$k;$j]))">$(Mpos[$k;$j])</span>
        !endif
      !else
         &nbsp;
      !endif
      <input list="emptylist" value="" size="1" class="cw_input" maxlength="1"
        id="case_$(k)_$(j)" autocapitalize="none" onkeyup="posfleche($k,$j);">
      </td>
    !endif
  !next j
  </tr>
!next k
