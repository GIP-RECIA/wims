        defH.style.display = 'none';
        if (j==n) {defH.style.display = 'block'; pos_auto('h');}
      }
     }
    }
  !else
    function showdef(n)
    {
      for (var j=1 ; j <= $cnt ;j++) {
       var defV = document.getElementById('V' + j);
