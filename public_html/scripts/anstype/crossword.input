  !if tooltip notwordof $(replyoption$i)
    function showdef(n)
    {
     for (var j=1 ; j <= $cnt ;j++) {
      var defV = document.getElementById('V' + j)
      if (defV) {
        defV.style.display ='none';
        if (j==n) {defV.style.display = 'block'; pos_auto('v');}
      }
      var defH=document.getElementById('H' + j)
