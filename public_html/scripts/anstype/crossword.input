  !set none=none
!endif
!for k = 1 to $listemotH_cnt
  !set u = !line $k of $defH
  !if $u <> $empty
    !increase cnt
    !set u=!replace internal http: by httphttp in $u
    !set u=!replace internal : by , in $u
    !set u=!replace internal httphttp by http: in $u
    !set un=!replace internal H by in $(u[1])
