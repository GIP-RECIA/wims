!if $wims_read_parm iswordof form check
  !goto $wims_read_parm
!endif

!exit
:form
!reset methparm3
!set N=!linecnt $mtobj1
!if $N=1
  !set l=!item 2 to -1 of $mtobj1
  !set l=!mathsubst integrate= in $l
