!set methtit=Séparer les cas selon une (in)équation
!set methenv=ZZ QQ RR
!set methparmtype=function, choice 6, function
!set methhelp=Cette méthode sépare la situation en deux cas, selon la\
 vérité d'une équation ou une inégalité. L'équation/inégalité et sa réciproque\
 seront rajoutées dans les hypothèses des deux cas respectivement.

!if $wims_read_parm iswordof form check
  !goto $wims_read_parm
!endif

!exit
:form
Séparer les cas suivant la vérité de l'(in)équation <br>
<input size="10" name="methparm1" value="$methparm1">
!formselect methparm2 from 1 to 6 prompt =,!=,<,>,<=,>=
<input size="10" name="methparm3" value="$methparm3">
!exit
:check
sign1=!item $methparm2 of =,!=,<,>,<=,>=
sign2=!item $methparm2 of !=,=,>=,<=,>,<

casesplit=$methparm1 $sign1 $methparm3\
$methparm1 $sign2 $methparm3
methexp=Séparer les cas \($methparm1 $sign1 $methparm3) et \($methparm1 $sign2 $methparm3)

!exit
