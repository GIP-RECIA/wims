slib_lang_exists_tmp=yes

slib_title=Lattice of cubes
slib_parms=6\
,position des cubes\
300,size in x\
300,size in y\
[red,red],color (vertex, edge)\
[0.01,0.03], size (vertex, edge)\
,word option: <span class="tt">p</span>

slib_out=The applet with the cubes.
slib_comment=There are two ways to enter the cubes : one can give the list of the coordinates \
of one vertex of the cubes. If the option word is <span class="tt">p</span>, one can draw a parallepipede\
by giving : origin, x-length, y-length, z-length (must be integers). See the examples.
