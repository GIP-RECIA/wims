slib_lang_exists_tmp=yes

slib_title=Talking Balloons (Cartoon style)
slib_parms=6\
, text in brackets []\
antiquewhite, color\
auto adapts to content, width\
auto adapts to content, height\
triangle=btm-left, <strong>options</strong> : rectangle noshadow border triangle=[position] number=[#]\
,[The speaker] (optional)

slib_out= html displaying a balloon containing text in parameters.
slib_comment=since wims version 4.09a, you can use following options :<ul>\
<li><strong>triangle</strong>= one of 8 alvailable positions for the triangle (btm-left, btm-left-in, btm-right, btm-right-in, left-top, left-in, right-top, right-in)</li>\
<li><strong>number</strong>= unique ID for the Balloon (id="bubble_#number") ;</li>\
<li><strong>rectangle</strong> : rectangular box</li>\
<li><strong>noshadow</strong> : removes shadow</li>\
<li><strong>border</strong> : adds a border</li>\
<li><strong>thought</strong> : thought balloon</li>\
</ul>

slib_example= [I have \(\frac{1}{2}\) apple and John has \(\frac{2}{3}\) apple. How many apples have we?],lightgreen,270,,border triangle=btm-left-in \
 [Default]\
 [color : #FFDDDD / options : border triangle=right-top],#FFDDDD,,,border triangle=right-top\
 [color : orange / options : noshadow triangle=btm-right],orange,,,noshadow triangle=btm-right\
 [color : lightblue  / size:500x100 / options:rectangle triangle=right-in],lightblue,400,100,rectangle triangle=right-in\
 [\(\frac{1}{2} + \frac{1}{3}= ???\) ],,,,thought,[Pierre]


