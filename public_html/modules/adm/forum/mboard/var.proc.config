
!if $is_owner!=yes
  error=not_owner
  !exit
!endif

!if $cf_set=yes
  cf_title=!trim $cf_title
  !if $cf_title=$empty
    cf_title=$mb_title
  !endif
  cf_description=!singlespace $cf_description
  cf_title=!singlespace $cf_title
  cf_title=!char 1 to 50 of $cf_title
  !bound cf_nolink within yes,no default yes
  cf_description=!char 1 to 1024 of $cf_description
  !bound cf_readpolicy within open,alluser,selecuser,owner default $mb_readpolicy
  !bound cf_sendpolicy within open,mailuser,alluser,selecuser,owner default $mb_sendpolicy
  !writefile $forumdir/.def !! This file is automatically generated!\
  !! Do not edit by hand.\
\
!set mb_title=$cf_title\
!set mb_description=$cf_description\
!set mb_supervisor=$mb_supervisor\
!set mb_email=$mb_email\
!set mb_lang=$mb_lang\
!set mb_readpolicy=$cf_readpolicy\
!set mb_sendpolicy=$cf_sendpolicy\
!set mb_password=$mb_password\
\
!set mb_creation=$mb_creation\
!set mb_defined=yes\
!set mb_nolink=$cf_nolink

  !read var.init
!else
  !for k in title,description,readpolicy,sendpolicy,regpassword,nolink
    cf_$k=$(mb_$k)
  !next k
  !default cf_nolink=no
!endif
