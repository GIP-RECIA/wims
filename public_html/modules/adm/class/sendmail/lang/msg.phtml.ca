!set wims_module_log=error: $error

!if $error=nosupervisoremail
  No has indicat cap adreça electrònica. Per tant, no és possible enviar el correu electrònic.
  !exit
!endif

!if empty_msg=$error
  El teu missatge està buit!
  !exit
!endif

!if empty_user=$error
  No s'ha seleccionat cap alumne. Revisa els filtres.
  !exit
!endif

!if empty_mailuser=$error
  Cap dels alumnes seleccionats té adreça de correu electrònic.
  !exit
!endif

!if noclass=$error
  No estàs identificat a una classe. No juguis amb la barra d'adreces del navegador!
  !exit
!endif

!if notsupervisor=$error
  No ets el professor d'aquesta classe. No juguis amb la barra d'adreces del navegador!
  !exit
!endif

!if nouser=$error
  Aucun des participants de cette classe n'a défini d'adresse électronique. Il n'est donc pas possible d'envoyer de message !
  !exit
!endif

!if nousermail=$error
  Aucun participant avec une adresse électronique ne correspond aux critères que vous avez définis. Aucun message ne peut être envoyé.
  !exit
!endif

!if sendmailteacherclose=$error
  L'enseignant de cette classe a fermé l'expédition de message ou n'a pas défini d'adresse électronique. Il n'est donc pas possible de lui envoyer un message.
  !exit
!endif

!msg $error
