!form reply
<input type="hidden" name="job" value="$job">

<fieldset class="property_fields halfwidth blockcenter">
  <legend>
!if $form_caption!=$empty
  $form_caption
!endif
 </legend>
!if $form_pass!=no or $form_suppass!=no
  <div class="field box">
  !if $passhow=yes
    !href cmd=reply&passhow=no $name_hidepass
  !else
    !href cmd=reply&passhow=yes $name_showpass
  !endif
  </div>
!endif
<div class="field box">
  <label for="title">$form_titlename</label>
  <input size="30" name="title" value="$title" id="title">
  <div class="formHelp">$form_titlename2</div>
 </div>
!if $form_level=yes
  <div class="field box">
  <label for="alevel">$wims_name_level</label>
  !set alevel=$class_level
  !formselect alevel list $levellist prompt $levelnames
  </div>
!endif
   <div class="field box">
    <label for="sup">$name_supervisor2</label>
!set wims_ref_class=wims_button_help float_right
!href cmd=help&special_parm=supervisor $wims_name_help
!readproc scripts/teacherlist.proc
!formselect sup list $tlist1 prompt $tlist2
    <div class="formHelp">$form_classname</div>
  </div>
!if $form_prog=yes
   <div class="field box">
     <label for="progstyle1">$name_Style</label>
  !set wims_ref_class=wims_button_help float_right
  !href cmd=help&special_parm=progopt $wims_name_help
  !formselect progstyle1 list mandatory,optional prompt\
	$name_style
   </div>
   <div class="field box">
    <label for="progstyle2">$name_installation</label>

  !set wims_ref_class=wims_button_help float_right
  !href cmd=help&special_parm=progopt $wims_name_help
  !default progstyle2=select
  !formselect progstyle2 list all,select prompt $wims_name_yes,$wims_name_no
  </div>
!endif
!if $form_pass=yes
  <div class="field box">
  <label for="pass">$wims_name_Password</label>
  !set wims_ref_class=wims_button_help float_right
  !href cmd=help&special_parm=pass $wims_name_help

  !if $passhow=yes
    <input type="text" size="30" name="pass" value="$pass" id="pass">
    <div class="formHelp">$name_register</div>
  !else
    <input type="password" size="30" name="pass" value="" id="pass">
    <div class="formHelp">$name_register</div>
    </div>
    <div class="field box">
    <label for="pass2">$wims_name_repeat_pass </label>
    <input type="password" size="30" name="pass2" value="" id="pass2">
    <div class="formHelp">$name_register</div>
  !endif
 </div>
!endif
!if $form_suppass!=no
  <div class="field box">
  <label for="passs">$wims_name_Password</label>
  !set wims_ref_class=wims_button_help float_right
  !href cmd=help&special_parm=passs $wims_name_help
  !if $passhow=yes
    <input type="text" size="30" name="passs" value="$passs" id="passs">
    <div class="formHelp">$name_supervisor2</div>
  !else
    <input type="password" size="30" name="passs" value="" id="passs">
    <div class="formHelp">$name_supervisor2</div>
    </div>
    <div class="field box">
     <label for="passs2">$wims_name_repeat_pass</label>
     <input type="password" size="30" name="passs2" value="" id="passs2">
     <div class="formHelp">$name_supervisor2</div>
  !endif
  </div>
!endif
<div class="field box">
  <label for="sechost">$name_IP</label>
&nbsp;
!set wims_ref_class=wims_button_help float_right
!href cmd=help&special_parm=sechost $wims_name_help
!set sechost=$class_secure
!default sechost=all
<input type="text" size="30" name="sechost" value="$sechost" id="sechost">
!reset sechost
  </div>
  <div class="wimscenter wimsform">
!if $cparent=prog
  <input type="hidden" name="cparent" value="$cparent">
!endif
  <input type="submit" name="confirm" value="$wims_name_tosave">
!if $form_cancel!=$empty
  $
  <input type="submit" name="cancel" value="$form_cancel" class="wims_secondary_button">
!endif
</div>
</fieldset>

!formend
