
!if $code=$empty
  code=!randint 10^8,10^9
  sup_email=!defof class_email in wimshome/log/classes/$wims_class/.def
  !if $sup_email=$empty
    auth=no
  !else
    !read scripts/mail.phtml
  !endif
!else
  repcode=!word 1 of $repcode
  !if $repcode!=$code
    auth=no
  !else
    auth=yes
  !endif
  !writefile wimshome/$wims_sesdir/auth.supervisor $auth
!endif
