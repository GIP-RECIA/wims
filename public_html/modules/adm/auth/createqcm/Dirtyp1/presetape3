	        !if $[$i+$rowsnb] isitemof $L
		  checked
		!endif
	>
	    </td>
	    <td bgcolor="$(bg2$(i))">
	      $(p$[$i+$rowsnb])
	    </td>
	  </tr>
	 !next i
	 !if $extrarow!=0
	  <tr>
	    <td align="center" bgcolor="$(coulors[$[($propsnb+1)%3+1];])" colspan="5">
	      <input type="checkbox" name="propsrep" value="$[$propsnb+1]"
