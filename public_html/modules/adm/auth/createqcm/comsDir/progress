	        <tr><td class="nowrap" bgcolor="white">$(labels$(exo)[$i;])</td>
	        </tr>
              </table>
        </td>
      !endif
      !if $i=$etape
        <td class="nowrap" bgcolor="palegreen">
	  <input type="radio" name="navig" value="$i" checked="checked">
          Etape $i
	  <br>
	      <table>
	        <tr><td class="nowrap" bgcolor="white">$(labels$(exo)[$i;])</td>
	        </tr>
              </table>
        </td>
      !endif
      !if $i>$etape
        <td class="nowrap">
          <span class="color:darkgray">Etape $i</span>
        </td>
      !endif
    !next i
    </tr>
  </table>

