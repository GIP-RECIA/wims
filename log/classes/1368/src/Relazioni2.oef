\text{rel1=(\a,\a),(\b,\b),(\c,\c),(\d,\d),(\e,\e),(\f,\f)}
\text{rel2=(\a,\a),(\b,\b),(\c,\c),(\d,\d),(\e,\e),(\f,\f),(\d,\e),(\e,\d)}
\text{rel3=(\a,\a),(\b,\b),(\c,\c),(\d,\d),(\e,\e),(\f,\f),(\c,\b),(\b,\f),(\f,\c),(\d,\e),(\e,\d)}
\text{rel4=(\a,\a),(\b,\b),(\c,\c),(\f,\f),(\d,\e),(\e,\d)}
