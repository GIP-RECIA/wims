\text{rel6=(\a,\a),(\b,\b),(\c,\c),(\d,\d),(\e,\e),(\f,\f),(\b,\c),(\c,\f)}
\text{rel7=(\a,\b),(\a,\c),(\b,\c),(\c,\e),(\c,\f),(\f,\e),(\e,\d)}
\text{rel8=(\a,\a),(\b,\b),(\c,\c),(\d,\d),(\e,\e),(\f,\f),(\d,\a),(\c,\f)}
