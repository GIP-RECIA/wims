\text{domanda=item(\m,\testodomanda)}

\text{rel = \n=1? \rel1}
\text{rel = \n=2? \rel2}
\text{rel = \n=3? \rel3}
\text{rel = \n=4? \rel4}
\text{rel = \n=5? \rel5}
\text{rel = \n=6? \rel6}
\text{rel = \n=7? \rel7}
\text{rel = \n=8? \rel8}
\text{rel = \n=9? \rel9}
\text{rel = \n=10? \rel10}
\text{rel = \n=11? \rel11}
\text{rel = \n=12? \rel12}

\text{relsorted=wims (sort items \rel)}

\text{risposta=item(4*(\n-1)+\m,\prop1)}


\text{testorisposta=\risposta=1? si:no}

\statement{Si consideri l'insieme \(A=\{\insieme\}\). 
