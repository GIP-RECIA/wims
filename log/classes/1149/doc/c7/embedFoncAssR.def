!set titb=Fonction associée à r(x)
!set keyw=
!set datm=20210829
!set prev=embedFoncAssX2
!set next=
!set upbl=main
!set dat1=19000101
!set dat2=24000101

!if $wims_read_parm!=$empty
  !goto $wims_read_parm
!endif
