	rm -f wims *.o Common/*.o 2>/dev/null
	cd Wimsd; make clean
	cd Wimslogd; make clean
	cd Lib; make clean
	cd Interfaces; make clean
	cd Misc; make clean
	cd OefMsg2wims; make clean
	cd Flydraw; make clean
	cd Texgif; make clean
	cd Module; make clean
	cd Mathml; make clean
